<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginHorizontal="11dp"
    tools:context=".clickActivity">

    <Button
        android:id="@+id/btm_a"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:text="@string/a"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btm_b"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btm_c"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:text="@string/c"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/btm_b"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btm_b"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:text="@string/b"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/btm_a"
        app:layout_constraintRight_toLeftOf="@id/btm_c"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btm_d"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:text="@string/d"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btm_b"
        app:layout_constraintTop_toBottomOf="@id/btm_a"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btm_f"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:text="@string/f"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/btm_b"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btm_a"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btm_e"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:text="@string/e"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/btm_a"
        app:layout_constraintRight_toLeftOf="@id/btm_c"
        app:layout_constraintTop_toBottomOf="@id/btm_a"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/pressed"
        android:textColor="#3F51B5"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btm_d"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

